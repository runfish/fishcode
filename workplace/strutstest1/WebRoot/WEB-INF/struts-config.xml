<?xml version="1.0" encoding="utf-8" ?>


<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  
    <form-beans>
       <form-bean name="loginForm" type="net.dfrz.LoginForm"></form-bean>
       <form-bean name="addStudentForm" type="net.dfrz.AddStudentForm"></form-bean>
    </form-beans>
    
    <global-forwards>
        <forward name="error1" path="/Error1.jsp"></forward>
    </global-forwards>
  
    
    <action-mappings>
    <action path="/login" type="net.dfrz.LoginAction" name="loginForm" scope="request" validate="true">
       <forward name="loginSuccess" path="/LoginSuccess.jsp"></forward>
       <forward name="loginFailure" path="/LoginFailure.jsp"></forward>
    </action>
    
    <action path="/addStudent" type="net.dfrz.AddStudentAction" name="addStudentForm"
    validate="true" >
       <forward name="addStudentSuccess" path="/AddStudentSuccess.jsp"></forward>
       <forward name="addStudentFailure" path="/AddStudent.jsp"></forward>
    </action>
  </action-mappings>
   <message-resources parameter="net.dfrz.demo.ApplicationResources" key="myKey"></message-resources>
  
</struts-config>