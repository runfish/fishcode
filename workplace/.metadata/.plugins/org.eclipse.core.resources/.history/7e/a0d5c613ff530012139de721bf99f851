	<script type="text/javascript">
	  
	    function removeHotel(no,name){
	      
	      if(confirm("您确认要删除分店["+name+"]的信息吗?")){
	         location.href='<c:url value="/hotelMgr?act=delete"/>&hotelno='+no;
	      }
	      
	    }
	    
	    function updateHotel(no){
	         location.href='<c:url value="/hotelMgr?act=forUpdate"/>&hotelno='+no;
	    }
	
	</script>

